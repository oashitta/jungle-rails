<h1 class="pt-5 pb-3">Create Category</h1>

<div class="well pb-3">
    <%= link_to 'Back to all categories', [:admin, :categories] %>
  </div>

<%= form_with model: @category, url: admin_categories_path, method: :post do |form| %>
  <div class="field py-3">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <%= form.submit 'Create Category', class: 'btn btn-success ' %>
<% end %>
